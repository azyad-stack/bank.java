<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="776.0" prefWidth="876.0" styleClass="reset_password_container"
            stylesheets="@../../styles/ResetPassword.css" xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myjavafxapp.Controllers.Admin.ResetPasswordController">

    <Text layoutX="14.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="Reset User Password" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0" />

    <VBox layoutX="14.0" layoutY="50.0" prefHeight="700.0" prefWidth="850.0" spacing="20"
          AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="50.0">

        <!-- Search Section -->
        <VBox spacing="10" styleClass="section-box">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Search for User"
                  styleClass="section-title"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="search_field" promptText="Enter Payee Address"
                           styleClass="search-field" prefWidth="400"/>
                <Button fx:id="search_btn" text="Search" styleClass="search-btn">
                    <graphic>
                        <FontAwesomeIconView glyphName="SEARCH" size="16"/>
                    </graphic>
                </Button>
            </HBox>

            <Label fx:id="search_result_lbl" styleClass="result-label"/>
        </VBox>

        <!-- User Info Section -->
        <VBox fx:id="user_info_section" spacing="10" styleClass="section-box"
              visible="false" managed="false">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="User Information"
                  styleClass="section-title"/>

            <HBox spacing="20">
                <VBox spacing="5">
                    <Label text="First Name:" styleClass="info-label"/>
                    <Label fx:id="first_name_lbl" styleClass="info-value"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Last Name:" styleClass="info-label"/>
                    <Label fx:id="last_name_lbl" styleClass="info-value"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Payee Address:" styleClass="info-label"/>
                    <Label fx:id="payee_address_lbl" styleClass="info-value"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Date Created:" styleClass="info-label"/>
                    <Label fx:id="date_created_lbl" styleClass="info-value"/>
                </VBox>
            </HBox>
        </VBox>

        <!-- Reset Password Section -->
        <VBox fx:id="reset_section" spacing="15" styleClass="section-box"
              visible="false" managed="false">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Reset Password"
                  styleClass="section-title"/>

            <VBox spacing="10">
                <Label text="New Password:" styleClass="input-label"/>
                <PasswordField fx:id="new_password_field" promptText="Enter new password"
                               styleClass="password-field"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Confirm Password:" styleClass="input-label"/>
                <PasswordField fx:id="confirm_password_field" promptText="Confirm new password"
                               styleClass="password-field"/>
            </VBox>

            <HBox spacing="15">
                <Button fx:id="reset_password_btn" text="Reset Password"
                        styleClass="reset-btn">
                    <graphic>
                        <FontAwesomeIconView glyphName="KEY" size="16"/>
                    </graphic>
                </Button>

                <Button fx:id="cancel_btn" text="Cancel" styleClass="cancel-btn">
                    <graphic>
                        <FontAwesomeIconView glyphName="TIMES" size="16"/>
                    </graphic>
                </Button>
            </HBox>

            <Label fx:id="reset_result_lbl" styleClass="result-label"/>
        </VBox>

    </VBox>

</AnchorPane>